<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_api_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Api Key (mandatory)"
            android:layout_margin="16dp"/>

        <EditText
            android:id="@+id/et_search_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search term"
            android:layout_margin="16dp"/>

        <EditText
            android:id="@+id/et_gallery_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gallery activity title"
            android:layout_margin="16dp"/>

        <CheckBox
            android:id="@+id/cb_show_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show back button"
            android:layout_margin="16dp"/>

        <CheckBox
            android:id="@+id/cb_expecting_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expect image uri result"
            android:layout_margin="16dp"/>

        <Button
            android:id="@+id/btn_start_image_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Pixabay search"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*All fields are optional, unless they are mark as mandatory"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/tv_uri_result_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="URI RESULT:"
            tools:ignore="HardcodedText"
            android:textColor="@android:color/black"
            android:layout_margin="16dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_uri_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    </LinearLayout>

</ScrollView>